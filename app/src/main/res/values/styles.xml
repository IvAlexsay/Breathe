<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/orange</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/purple</item>
    </style>
    <style name="MyButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorControlHighlight">@color/orange</item>
        <item name="colorAccent">@color/yellow</item>
    </style>
</resources>